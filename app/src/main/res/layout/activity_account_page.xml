<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.utkarshgagrg.sustarch.AccountPage"
    android:background="@color/backgroundColor" >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="12"
        android:id="@+id/oldPassword"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Old Password"
        android:layout_marginTop="100dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="12"
        android:id="@+id/newPassword"
        android:layout_below="@+id/oldPassword"
        android:layout_centerHorizontal="true"
        android:hint="New Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="12"
        android:id="@+id/reEnterNewPassword"
        android:layout_below="@+id/newPassword"
        android:layout_alignEnd="@+id/newPassword"
        android:hint="Re-enter New Password"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:id="@+id/changePasswordButton"
        android:layout_below="@+id/reEnterNewPassword"
        android:layout_centerHorizontal="true"
        android:background="@null"/>
</RelativeLayout>
